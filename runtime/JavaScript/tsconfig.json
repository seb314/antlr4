{
  "compilerOptions": {
    "target": "ES6",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "sourceMap": true,
    "esModuleInterop":true,
    "lib": [
      "ES2020"
    ],
    "noImplicitAny": true,
    "strictNullChecks": true,
    "preserveConstEnums": true,
    "typeRoots": [
      "./node_modules/@types"
    ],
    "types": [
      "node"
    ]
  },
  "include": [
    "**/*.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
